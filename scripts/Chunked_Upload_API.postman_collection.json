{
  "info": {
    "name": "Chunked Upload API",
    "description": "Test collection for large file chunked upload flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE"
    },
    {
      "key": "bucket_id",
      "value": "YOUR_BUCKET_ID_HERE"
    },
    {
      "key": "upload_id",
      "value": ""
    },
    {
      "key": "chunk_size",
      "value": "5242880"
    },
    {
      "key": "total_chunks",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Init Chunked Upload",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "if (jsonData.upload_id) {",
              "    pm.collectionVariables.set('upload_id', jsonData.upload_id);",
              "    pm.collectionVariables.set('chunk_size', jsonData.chunk_size);",
              "    pm.collectionVariables.set('total_chunks', jsonData.total_chunks);",
              "    console.log('Upload ID:', jsonData.upload_id);",
              "    console.log('Total Chunks:', jsonData.total_chunks);",
              "}",
              "",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has upload_id', function () {",
              "    pm.expect(jsonData).to.have.property('upload_id');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"file_name\": \"test-large-file.mp4\",\n    \"file_size\": 104857600,\n    \"content_type\": \"video/mp4\",\n    \"path\": \"videos/test\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/init",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "init"]
        }
      }
    },
    {
      "name": "2. Upload Chunk (index 0)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "console.log('Uploaded chunks:', jsonData.uploaded_chunks, '/', jsonData.total_chunks);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/octet-stream"
          }
        ],
        "body": {
          "mode": "file",
          "file": {
            "src": ""
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/chunk?upload_id={{upload_id}}&chunk_index=0",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "chunk"],
          "query": [
            {
              "key": "upload_id",
              "value": "{{upload_id}}"
            },
            {
              "key": "chunk_index",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "2. Upload Chunk (Multipart Form)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "console.log('Uploaded chunks:', jsonData.uploaded_chunks, '/', jsonData.total_chunks);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "chunk",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/chunk?upload_id={{upload_id}}&chunk_index=0",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "chunk"],
          "query": [
            {
              "key": "upload_id",
              "value": "{{upload_id}}"
            },
            {
              "key": "chunk_index",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "3. Check Progress",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "console.log('Progress:', jsonData.progress, '%');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/{{upload_id}}/progress",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "{{upload_id}}", "progress"]
        }
      }
    },
    {
      "name": "4. Complete Upload",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 202', function () {",
              "    pm.response.to.have.status(202);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "if (jsonData.file_hash) {",
              "    console.log('File Hash:', jsonData.file_hash);",
              "    console.log('Object ID:', jsonData.object.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"upload_id\": \"{{upload_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/complete",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "complete"]
        }
      }
    },
    {
      "name": "5. Abort Upload (Optional)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/cloud/buckets/{{bucket_id}}/objects/chunked/{{upload_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "cloud", "buckets", "{{bucket_id}}", "objects", "chunked", "{{upload_id}}"]
        }
      }
    }
  ]
}